<div class="page-header">
  <%= link_to venues_path, :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_venue_path(@venue), :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>

  <%= link_to new_event_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Book A Show
  <% end %>

  <h1>Show venue</h1>
</div>

<dl class="dl-horizontal">
  <dt>Venue name:</dt>
  <dd><%= @venue.venue_name %></dd>

  <dt>Location:</dt>
  <dd><%= @venue.location %></dd>

  <dt>Contact number:</dt>
  <dd><%= @venue.contact_number %></dd>

  <dt>Homepage link:</dt>
  <dd><%= @venue.homepage_link %></dd>

</dl>
