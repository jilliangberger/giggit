<%= form_for(@band, :html => { :class => "form-horizontal", :role => "form" }) do |f| %>
  <% if @band.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@band.errors.count, "error") %> prohibited this band from being saved:</h4>

      <ul>
      <% @band.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :band_name,"* Band Name", :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :band_name, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :genre,"* Genre", :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :genre, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :email,"* Email", :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :email, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :password,"* Password", :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.password_field :password, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :password_confirmation,"* Password Confirmation", :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.password_field :password_confirmation, :class => "form-control" %>
    </div>
  </div>
  <hr><p style="text-align:center" >Optional Fields</p></hr>
  <div class="form-group">
    <%= f.label :phone_number, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :phone_number, :class => "form-control", placeholder: "(123) 456-7890" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :home_town, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :home_town, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :facebook, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :facebook, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :soundcloud, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :soundcloud, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :reverbnation, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :reverbnation, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :band_camp, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :band_camp, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :venue_id, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :venue_id, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Save Band", {:class => "btn btn-primary"} %>
    </div>
  </div>
<% end %>
