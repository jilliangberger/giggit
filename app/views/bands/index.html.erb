<div class="page-header">
  <%= link_to new_band_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Band
  <% end %>
  <h1>Listing bands</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Band name</th>
            <th>Genre</th>
            <th>Venue</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @bands) do |band| %>
            <td><%= band.band_name %></td>
            <td><%= band.genre %></td>
            <td><%= band.venue_id %></td>
            <td><%= link_to 'Show', band %></td>
        <td><%= link_to 'Edit', edit_band_path(band) %></td>
        <td><%= link_to 'Destroy', band, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
